
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <!-- External CSS -->
    <link rel="stylesheet" href="~/BlogSpot/css/AddBlog/style.css">
    <title>Form</title>
</head>
<body>
    <h1 class="text-center mt-4">Add New Blog</h1>

    <div class="container">
        <form>
            <!-- Title -->
            <div class="row mt-4">
                <div class="col-md-8 ml-5">
                    <label class="font-weight-bold" for="txtTitle">Enter Title</label>
                    <input type="text" class="form-control" placeholder="Enter Title" id="txtTitle">
                </div>
            </div>

            <!-- First Paragraph -->
            <div class="row" id="Para1">
                <div class="col-md-8 ml-5 mt-4">
                    <label class="font-weight-bold" for="txtPara1">Enter First Paragraph</label>
                    <textarea class="form-control" rows="3" placeholder="Enter First Paragraph" id="txtPara1"></textarea>
                </div>
            </div>

            <!-- Second Paragraph -->
            <div class="row" id="Para2">
                <div class="col-md-8 ml-5 mt-4">
                    <label class="font-weight-bold">Enter Second Paragraph</label>
                    <textarea class="form-control" rows="3" placeholder="Enter Second Paragraph" id="txtPara2"></textarea>
                </div>
            </div>

            <!-- Third Paragraph -->
            <div class="row" id="Para3">
                <div class="col-md-8 ml-5 mt-4">
                    <label class="font-weight-bold">Enter Third Paragraph</label>
                    <textarea class="form-control" rows="3" placeholder="Enter Third Paragraph" id="txtPara3"></textarea>
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-dash-square mt-2" viewBox="0 0 16 16" id="removePara-icon" style="background-color:yellow;">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z" />
                    </svg>
                </div>
            </div>

            <!-- Add Icon -->
            <div class="row mt-2" id="addPara">
                <div class="col ml-5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16" id="addPara-icon" style="background-color: yellow;">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                </div>
            </div>

            <div class="row mt-2" style="margin-left:300px;">
                <button type="button" class="btn btn-success" id="btnSubmit">Submit</button>
                <button type="button" class="btn btn-danger ml-2" id="btnClear">Clear</button>
            </div>
        </form>
    </div>

   <script src="~/BlogSpot/js/AddBlog/app.js"></script>



